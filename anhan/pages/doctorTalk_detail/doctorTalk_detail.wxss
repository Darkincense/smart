.videoBox {
}

.videoBox video {
  width: 750rpx;
  height: 422rpx;
  display: block;
}

.content {
  position: relative;
  width: 100%;
  padding: 44rpx 32rpx 40rpx 32rpx;
  box-sizing: border-box;
}

.content_title {
  width: 686rpx;
  height: 80rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(0, 0, 0, 1);
  line-height: 40rpx;
}

.introduction {
  width: 686rpx;
  height: 108rpx;
  margin-top: 60rpx;
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(151, 151, 151, 1);
  line-height: 36rpx;
}

.introductionIcon {
  position: absolute;
  left: 32rpx;
  top: 160rpx;
  width: 56rpx;
  height: 40rpx;
}

/* 最新推荐 */

.latest {
  width: 100%;
  position: relative;
  box-sizing: border-box;
  padding: 16rpx 32rpx;
}

.latest .title {
  width: 750rpx;
  height: 44rpx;
}

.latestImg {
  position: absolute;
  width: 126rpx;
  height: 44rpx;
  left: 32rpx;
  top: 16rpx;
}

.recommendList {
  margin-top: 6rpx;
}

.recommendList_item {
  padding: 14rpx 0;
}

.has2Border {
  border-top: 2px solid rgba(243, 243, 247, 1);
}

.imgBox {
  width: 326rpx;
  height: 183rpx;
  background: pink;
}

.titleBox {
  width: 344rpx;
  height: 120rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(30, 30, 30, 1);
  line-height: 40rpx;
}

/* 底部 */

.bottomBox {
  position: relative;
  width: 750rpx;
  height: 174rpx;
  background: rgba(243, 243, 247, 1);
}

.isBottom {
  position: absolute;
  left: 322rpx;
  top: 20rpx;
  width: 104rpx;
  height: 36rpx;
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(222, 222, 222, 1);
  line-height: 36rpx;
