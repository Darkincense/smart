<!--index.wxml-->
<view class="container">
	<view class="Carousel">
		<swiper
		 current="{{swiperCurrent}}"
		 bindchange="swiperChange"
		 indicator-dots="{{indicatorDots}}"
		 autoplay="{{autoplay}}"
		 interval="{{interval}}"
		 duration="{{duration}}"
		>
			<block wx:for="{{imgUrls}}">
				<swiper-item>
					<image src="{{item}}" class="slide-image" />
				</swiper-item>
			</block>
		</swiper>
		<view id="boxCell">
			<block wx:for="{{imgUrls}}" wx:for-index="index">
				<view id="{{index}}" class="dot {{index === swiperCurrent ? 'active':''}}" bindtap="selectCarouselByIndex" />
			</block>
		</view>

	</view>
	<view id="MainSelect" />
</view>

